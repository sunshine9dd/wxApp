/* pages/mine/mine.wxss */
.mine{
  position: relative;
}
.item-info{
  display: flex;
  font-size: 26rpx;
  color: #999;
  padding: 10rpx 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #efefef; 
}
.item-info image{
  width:80rpx;
  height:80rpx;
  border-radius:50%;
}
.item-info image.right{
  width:12rpx;
  height:22rpx;
  border-radius:0;
}
.item-info>view:nth-child(1) {
  text-align: left;
  flex: 1;
}
.item-info>view:nth-child(2) {
 text-align: right;
  flex: 1;
}