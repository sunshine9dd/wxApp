.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.flex-left {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.commodity-header {
  width: 100%;
  margin-bottom: 20rpx;
}

.header, .header image {
  width: 100%;
  height: 250rpx;
  background-color: #fff;
}

.info {
  width: 100%;
  min-height: 300rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.info>view:nth-child(1) {
  width: 100%;
  height: 100rpx;
}

.info--money {
  flex: 1;
}

.info--money>text:nth-child(1) {
  font-size: 24rpx;
  color: #999;
}

.info--money>text:nth-child(2) {
  font-size: 60rpx;
  color: #ff2283;
}

.info--money>text:nth-child(3) {
  font-size: 26rpx;
  color: #BCBCBC;
  margin-left: 20rpx;
}

.info--countdown {
  width: 270rpx;
}

.info--countdown--num {
  width: 44rpx;
  height: 48rpx;
  background: #333;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 48rpx;
  text-align: center;
}

.info--countdown>text:nth-child(1) {
  font-size: 22rpx;
  color: #999;
  line-height: 30rpx;
  margin-right: 20rpx;
}

.info--countdown>text:nth-child(3), .info--countdown>text:nth-child(5) {
  color: #333;
  margin: 0 5rpx;
  margin-top: -5rpx;
}

.info--title,  {
  width: 100%;
  min-height: 45rpx;
  line-height: 45rpx;
  font-size: 32rpx;
  color: #333;
}

.info--describe, .info--remark {
  margin-top: 10rpx;
  width: 100%;
  min-height: 37rpx;
  font-size: 26rpx;
  color: #999;
  line-height: 37rpx;
}
.info--remark image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.info__type {
  color: #ff2283;
  margin-left: -15rpx;
}

.info--stroe {
  width: 100%;
  min-height: 50rpx;
  margin-top: 10rpx;
  justify-content: space-between;
  align-items: flex-start;
  padding-top: 10rpx;
}

.info-count {
  min-width: 198rpx;
  height: 38rpx;
  background: #FFF3F8;
  border-radius: 4rpx;
  border: 1rpx solid #FF95C4;
  display: inline-block;
  font-size: 22rpx;
  color: #FF2283;
  text-align: center;
  line-height: 38rpx;
  padding: 0 5rpx;
}

.info-count__small {
  min-width: 110rpx;
}

.info--stroe-name {
  width: calc(100vw - 325rpx);
  height: 50rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: 2rpx;
}

.info--remark {
  font-size: 24rpx;
  color: #999;
  
}

.info--remark>image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
  margin-top: -3rpx;
}
.detail{
  padding: 30rpx;
}
.detail image{
  width: 100%;
}