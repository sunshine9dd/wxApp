.index{
  position: relative;
}

/* 头部 */

.header, .header image ,.header, .header video{
  width: 100%;
  height: 250rpx;
}
image.bg{
  top:250px;
}
/*修改面板指示点样式 -s*/
.header .wx-swiper-dots.wx-swiper-dots-horizontal {
    padding: 5rpx 16rpx;
    background-color: rgba(255, 255, 255, .38);
    border-radius: 12rpx;
}

.header .wx-swiper-dot {
    display: inline-flex;
    justify-content: space-between;
}

.header .wx-swiper-dot::before {
    content: '';
    flex: 1;
    background: #FFF;
    border-radius: 8rpx;
}

.header .wx-swiper-dot-active::before {
    background: #ff2283;
}

/*修改面板指示点样式 -e*/

.store {
  width: 100%;
  min-height: 200rpx;
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.store--info {
  width: 100%;
  min-height: 200rpx;
  border-radius: 16rpx;
  border: 1rpx solid #E8E8E8;
  padding: 26rpx;
  padding-left: 45rpx;
  padding-right: 45rpx;
}

.store--info--inner {
  font-size: 26rpx;
  color: #BCBCBC;
  line-height: 50rpx;
  align-items: flex-start;
}

.store--info--inner image{
  width: 26rpx;
  height: 26rpx;
}

.store--info--inner>view:nth-child(1){
  width: 50rpx;
  min-height: 50rpx;
}

.store--info--inner>view:nth-child(2){
  width: 150rpx;
  min-height: 50rpx;
}

.store--info--inner>view:nth-child(3){
  width:calc(100% - 200rpx);
  min-height: 50rpx;
}