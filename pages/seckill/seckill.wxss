.seckill{
  background-color: #ffffff;
  padding-bottom: 120rpx;
}

.scroll-info {
  width: 100%;
}
.pay-footer{
  position: fixed;
  z-index: 2;
  bottom: 0;left: 0;
}
.evaluate{
  padding: 20rpx;
  padding-bottom: 120rpx;
}
.evaluate .h2{
  font-size: 32rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #e3e3e3;
  color:#333;
}
.evaluateBox{
  border-bottom: 1px solid #e3e3e3;
}
.evaluate .header{
  line-height: 80rpx;
}
.evaluate .header image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  border-radius: 50%;
  margin-right: 20rpx;
}
.evaluate .header text{
  float: right;
  font-size: 28rpx;
  color: #333;
}
.evaluate .content{
  padding: 10rpx 0;
  color: #999;
  font-size: 28rpx;
}
.appraiseImg{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
}
.appraiseImg:first-of-type{
  margin-left: 0;
}