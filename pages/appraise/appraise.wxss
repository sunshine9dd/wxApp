/* pages/appraise/appraise.wxss */
.appraise{
  padding: 0 20rpx;
}
.appraise .header{
  padding: 20rpx 0;
  border-bottom: 1px solid #e8e8e8;
}
.appraise .header image.order{
  width: 100rpx;
  height: 100rpx;
  vertical-align: -10rpx;
  margin-right: 20rpx;
}
.appraise .header .orderName{
  display: inline-block;
  font-size: 28rpx;
  color: #000;
}
.appraise .header .orderName view{
  margin-top: 20rpx;
  color: #FF2283;
  font-size: 28rpx;
}
.appraise .starBox{
  padding: 20rpx 0;
  border-bottom: 1px solid #e8e8e8;
}
.appraise .starBox image.star{
  width: 50rpx;
  height: 50rpx;
  vertical-align: -8rpx;
  margin: 0 20rpx;
}
textarea{
  display: block;
  margin: 20rpx 0;
  width: 100%;
  min-height: 300rpx;
  font-size: 28rpx;
  color: #999;
}
.imgBox{
  padding: 20rpx 0;
  border-top:1px solid #e8e8e8; 
  border-bottom:1px solid #e8e8e8; 
}
.imgBox .add{
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #e8e8e8;
}
.imgBox>.imgList{
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 20rpx;
  position: relative;
}
.imgBox .imgList image{
  width: 200rpx;
  height: 200rpx;
}
.imgBox .add image{
  display: block;
  margin: 50rpx auto;
  width: 100rpx;
  height: 100rpx;
}
.imgBox .imgList image.close{
  position: absolute;
  z-index: 2;
  width: 50rpx;
  height: 50rpx;
  top: -10rpx;right: -10rpx;
  border-radius: 50%;
  border: 1px solid #e8e8e8;
  background-color: #fff;
}
.confirm{
  margin: 20rpx auto;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #FF2283;
  border-radius: 40rpx;
}