/**app.wxss**/

.container {
  height: 100%;
  width: 100%;
}

page {
  height: 100%;
  width: 100vw;
  margin: 0px;
  padding: 0px;
  box-sizing: border-box;
  color: #333;
  font-family: PingFangSC-Medium;
  background-color: #fff;
}

view, input {
  box-sizing: border-box;
}

/* 公共的样式 */

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-left {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.flex-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 块的小标题 */

.small-title {
  width: 100%;
  height: 70rpx;
  padding: 0 30rpx;
  margin-top: 40rpx;
}

.small-title-view {
  flex: 1;
  font-size: 40rpx;
  color: #333;
  line-height: 56rpx;
}

.small-title-vice-view {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 37rpx;
}

.pay-footer {
  width: 100%;
  height: 98rpx;
  background: linear-gradient(-90deg, #FF509D, #FF2283);
  font-size: 34rpx;
  color: #fff;
}
image.bg{
  width: 100%;
  position: absolute;
  top: 0;left: 0;
  z-index: -1;
  opacity: 0.3;
}
/*没有列表*/
.noList{
  padding: 30rpx 0;
  text-align: center;
  color: #c9c9c9;
  font-size: 24rpx;
}